<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_cmd_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/exec_custom_shell"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:endIconCheckable="true"
        app:endIconDrawable="@drawable/rounded_send_24"
        app:endIconMode="custom"
        app:endIconTint="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_cmd"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconCheckable="false"
        app:startIconDrawable="@drawable/ic_console"
        app:startIconTint="?attr/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_cmd_text_input_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2" />
    </com.google.android.material.textfield.TextInputLayout>
</FrameLayout>